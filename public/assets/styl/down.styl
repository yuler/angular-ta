// @import 'nib'
global-reset();

color-line = #cccccc
color-background = white
color-font = #555555
color-font-hover = #008cff
color-theme = #00e0ff
color-theme-shadow = #0399ad

@import "_base/variable"

html,body
	margin: 0
html,body,a
	font-family : '微软雅黑'
.container
	width: auto
	padding 0 15px;
	padding-top 0px;
	@media phone
		padding-top 50px;
		width 700px;
		margin 0 auto;
	header,footer
		text-align: center;
		@media phone
			padding: 0px 50px;
		a
			text-decoration: none
			color color-font
	header
		font-size 16px;
		color #7d878a
	footer
		border 1px #eee solid
		border-radius: 5px;
		margin-bottom 15px
		@media phone
			margin-bottom: 30px
	footer,footer a
		font-size 14px
		color #999999
	#content
		height 52px;
		background-color: color-line
		border-radius: 5px;
		@media phone
			margin: 0 50px
		form
			width auto;
			padding 7px 30px
			height 50px;
			div
				width: 100%;
				display table;
			// margin 30px;
			// @media phone
			// 	margin 0 50px
				input
					width 100%
					// @media phone
					// 	width 380px
					font-size 14px
					padding 8px 10px
					border color-line 1px solid
					margin 2px 0px;
				input:focus
					border #66afe9 1px solid
					outline none
					-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
						box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
			a
				margin: 8px 0px 10px 0px;
				width auto
				font-size 14px
				z-index: 999
			a:hover
				cursor: pointer
			// button
			// 	padding: 0px
			// 	margin 2px 0px
			// 	width 45%;
			// 	font-size 14px
			// 	float: left
			// 	@media phone
			// 		width 200px
	form:after
		content: "."
		display: block
		height: 0
		clear: both
		visibility: hidden